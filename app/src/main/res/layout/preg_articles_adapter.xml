<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:text="Pubdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pubDate_textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" android:layout_marginTop="8dp"
            android:textSize="16sp" android:layout_below="@+id/feedTitle_textView"
    android:textStyle="italic"/>
    <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/feedTitle_textView" android:layout_alignParentStart="true"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" android:layout_alignParentTop="true"
            android:textSize="20sp"
    android:textStyle="bold"/>
    <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/description_textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_below="@+id/pubDate_textView" android:textSize="16sp"/>
</RelativeLayout>