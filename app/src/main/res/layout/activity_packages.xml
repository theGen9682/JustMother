<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".packages"
android:background="@drawable/home_page">

    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
               android:background="@drawable/page_heading"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView2"
               app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:background="@drawable/trimester_package1"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
                 android:id="@+id/imageButton6" android:layout_marginStart="44dp"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:background="@drawable/trimester_package2"
                 android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
                 app:layout_constraintStart_toEndOf="@+id/imageButton6" android:layout_marginStart="48dp"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
                 android:id="@+id/imageButton"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:background="@drawable/trimester_package3"
                 android:layout_marginTop="32dp"
                 app:layout_constraintTop_toBottomOf="@+id/imageButton6" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp" android:id="@+id/imageButton7"/>

    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:background="@drawable/special_test_package"
                 android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageButton7"
                 android:layout_marginStart="48dp" app:layout_constraintEnd_toEndOf="@+id/imageButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>